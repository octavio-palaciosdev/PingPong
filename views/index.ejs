<!--- Signifies html5 --->
<!DOCTYPE html>
<html>

<head>
    <title>Pin Pong!</title>
    <!-- Setup for mobile device screen physical width -->
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>
    <div class="container">
        <div class="row justify-content-around">

            <div class="col-4 cardx" style="margin-top: 100px;  border-radius: 5px;">
                <div class="col-12 text-center mt-3">
                    <p class="playerName mt-4"><b>Player 1 Name</b></p>
                    <input type="text" placeholder="Enter Player 1 Name">
                    <p class="playerName mt-4"><b>Player 2 Name</b></p>
                    <input type="text" placeholder="Enter Player 2 Name">
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-warning mt-5">
                        CONTINUE
                    </button>
                </div>
            </div>
            <div class="col-4 cardx" style="margin-top: 100px; border-radius: 5px;">
                <div class="row">
                    <div class="row justify-content-around mt-3">
                        <div class="col-4">
                            <p class="playerName"><b>Player 1</b></p>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-danger">Add Win</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <p class="text-center secText">Wins</p>
                        </div>
                        <div class="col-6">
                            <h3 class="text-center secText">7</h3>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="row justify-content-around">
                        <div class="col-4">
                            <p class="playerName"><b>Player 2</b></p>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-danger">Add Win</button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <p class="text-center secText">Wins</p>
                        </div>
                        <div class="col-6">
                            <h3 class="text-center secText">3</h3>
                        </div>

                    </div>
                </div>

                <hr>

                <div class="row justify-content-around">
                    <div class="col-4">
                        <p class="secText"><b>Current winner:</b></p>
                    </div>
                    <div class="col-4">
                        <p class="playerName"><b>Player 1</b></p>
                    </div>
                </div>
                <div class="row justify-content-around">
                    <div class="col-4">
                        <p class="secText"><b>Win Difference:</b></p>
                    </div>
                    <div class="col-4">
                        <p class="playerName"><b>4</b></p>
                    </div>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-warning mt-5">Save Game</button>
                </div>


            </div>
        </div>

    </div>


    </div>
</body>

</html>